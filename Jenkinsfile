pipeline {
  agent any
  stages {
    stage ('build') {
      steps {
        echo 'building'
            }   
        }
    stage ('test') {
      steps {
        echo 'testing'
            } 
        }
    stage ('deploy') {
      step {
        echo 'deploying'
           }
        }  
    }  
}



  echo "hello world "
  echo "my 1st pipeline "
